<%= form_for(@program, :html => {:multipart => true}) do |f| %>
  <% if @program.errors.any? %>
    <div id="error_explanation">
	<div class="alert alert-error">
      <%= pluralize(@program.errors.count, "error") %> prohibited this program from being saved:
    </div>
      <ul>
      <% @program.errors.full_messages.each do |msg| %>
        <li>* <%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>	
  </div>
  
  <div class="field">
  <%= f.label :photo %><br />
  <%= f.file_field :photo %>
  </div>
  
  <div class="actions">
    <% if logged_in? && authorized? %>
    <%= f.submit 'Create Program', :class => 'btn btn-primary'%>
	<% end %>
  </div>
<% end %>
